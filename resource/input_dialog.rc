#include <windows.h>
#include "resource.h"

// 设置 UTF-8 编码
#pragma code_page(65001)

// 通用输入对话框 - 用于设置倒计时时间
CLOCK_IDD_DIALOG1 DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置倒计时"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "25=25分钟\n25h=25小时\n25s=25秒\n25 30=25分钟30秒\n25 30m=25小时30分钟\n1 30 20=1小时30分钟20秒\n17 20t=倒计时到17点20分\n9 9 9t=倒计时到9点9分9秒", CLOCK_IDC_STATIC, 10, 10, 180, 70
    EDITTEXT        CLOCK_IDC_EDIT, 10, 85, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 108, 50, 14
END

// 颜色值输入对话框
CLOCK_IDD_COLOR_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "设置颜色值"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "支持以下格式：\n\n1. HEX格式：#FFB6C1、FFB6C1\n2. RGB格式：255,182,193、255 182 193\n3. 颜色名：white、red、black、pink", CLOCK_IDC_STATIC, 10, 10, 180, 50
    EDITTEXT        CLOCK_IDC_EDIT, 10, 75, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 105, 50, 14
END

// 启动设置对话框
CLOCK_IDD_STARTUP_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "启动设置 - 倒计时"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "设置启动时的默认倒计时时间\n格式同倒计时时间设置", CLOCK_IDC_STATIC, 10, 10, 180, 30
    EDITTEXT        CLOCK_IDC_EDIT, 10, 55, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 105, 50, 14
END

// 快捷时间选项设置对话框
CLOCK_IDD_SHORTCUT_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "倒计时预设"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "输入数字（分钟），用空格分隔\n\n25 10 5\n\n表示创建 25分钟、10分钟、5分钟三个选项", CLOCK_IDC_STATIC, 10, 10, 180, 50
    EDITTEXT        CLOCK_IDC_EDIT, 10, 75, 180, 20, ES_AUTOHSCROLL | ES_MULTILINE
    PUSHBUTTON      "确定", CLOCK_IDC_BUTTON_OK, 140, 105, 50, 14
END